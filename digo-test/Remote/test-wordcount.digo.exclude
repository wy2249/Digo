// a quick sort function for string slice
func quick_sort(arr []string, p int, q int) {
    if (p < q) {
        pivot := arr[p]
        i := p
        for (j := p + 1; j <= q; j = j + 1) {
            if (arr[j] <= pivot) {
                i = i + 1
                swap(arr, i, j)
            }
        }
        swap(arr, p, i)
        quick_sort(arr, p, i - 1)
        quick_sort(arr, i + 1, q)
    }
}

func swap(arr []string, p int, q int) {
    tmp := arr[i]
    arr[i] = arr[j]
    arr[j] = tmp
}

